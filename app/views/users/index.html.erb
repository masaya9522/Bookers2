<main>
  
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
      <h2>User info</h2>
  <%= image_tag current_user.get_profile_image(100,100) %>
  
  <table class="table">
    <tbody><tr></tr>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
    
    </tbody>
  </table>
  
  <div class="row">
    <div class="btn btn-outline-secondary btn-block edit_user_152619">
        <%= link_to edit_user_path(current_user) do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
    </div>
  </div>
      

<h2 class="mt-3">New book</h2>
<%= form_with model: @new_book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

    </div>

<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
 </thead>
 
  <% @users.each do |user| %>
  
  <tbody>
  
  <tr>
    <td><%= image_tag user.get_profile_image(100,100) %></td>
    <td><%= user.name %></td>
    <td><%= link_to user_path(user.id) do %>Show<% end %></td>
  </tr>
  
  <% end %>
   
 </tbody>
 
</table>

</div>
</div>
</div>

</main>

